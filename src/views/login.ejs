<%- include('includes/head') %>
<%- include('includes/nav') %>
  
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo:</p>
    
      <div class="row">
        <div class="col-lg my-5">
          <h4>Faça seu cadastro:</h4>
          <p>Se você ainda não tem conta preencha o formulário abaixo:</p>

          <%- include('includes/messages') %>
          
          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail:</label>
              <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="exemplo@exemplo.com">
              <small id="emailHelp" class="form-text text-muted text-email">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label>Sua senha:</label>
              <input type="password" class="form-control" name="password" placeholder="Senha">
              <small id="passwordHelp" class="form-text text-muted text-password"></small>
            </div>
            
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>

        </div>

        <div class="col-lg my-5">
          <h4>Fazer login:</h4>
          <p>Se você já tem uma conta, faça seu login:</p>
          
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail:</label>
              <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="exemplo@exemplo.com">
              <small id="emailHelp" class="form-text text-muted text-email"></small>
            </div>
            <div class="form-group">
              <label>Sua senha:</label>
              <input type="password" class="form-control" name="password" placeholder="Senha">
              <small id="passwordHelp" class="form-text text-muted text-password"></small>
            </div>
            
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    
    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
